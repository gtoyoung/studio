rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin privileges
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read any user's data. Users can only read their own.
      allow get: if request.auth.uid == userId || isAdmin();
      
      // Admins can list all users.
      allow list: if isAdmin();

      // Users can create their own document upon signup.
      allow create: if request.auth.uid == userId;
      
      // Users can update their own data.
      allow update: if request.auth.uid == userId;
    }

    // Rules for the 'responses' collection
    match /responses/{date}/participants/{userId} {
      // Admins can read/write/delete any vote.
      // Users can only read/write/delete their own vote.
      allow read, write, delete: if request.auth.uid == userId || isAdmin();
      
      // Admins can list all votes for a given day.
      allow list: if isAdmin();
    }
  }
}
